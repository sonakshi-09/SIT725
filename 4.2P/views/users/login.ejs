<%- include('../partials/header') %>

<div class="section white">
  <div class="container">
    <div class="row">
      <div class="col s12 m8 offset-m2 l6 offset-l3">
        <div class="card">
          <div class="card-content">
            <span class="card-title center-align">Login</span>
            <form action="/users/login" method="POST">
              <div class="row">
                <div class="input-field col s12">
                  <i class="material-icons prefix">email</i>
                  <input id="email" name="email" type="email" class="validate" value="<%= typeof email !== 'undefined' ? email : '' %>" required>
                  <label for="email">Email</label>
                </div>
              </div>
              <div class="row">
                <div class="input-field col s12">
                  <i class="material-icons prefix">lock</i>
                  <input id="password" name="password" type="password" class="validate" required>
                  <label for="password">Password</label>
                </div>
              </div>
              <div class="row">
                <div class="col s12 center-align">
                  <button type="submit" class="btn-large waves-effect waves-light teal">
                    Login <i class="material-icons right">send</i>
                  </button>
                </div>
              </div>
            </form>
          </div>
          <div class="card-action center-align">
            <p>Don't have an account? <a href="/users/register" class="teal-text">Register here</a></p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('../partials/footer') %> 